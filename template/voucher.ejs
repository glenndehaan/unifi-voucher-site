                });
            });
            vouchersEmail.forEach((el) => {
                el.addEventListener('click', async () => {
                    const htmlRes = await fetch(`<%= baseUrl %>/voucher/${el.dataset.id}/email`);

                    if(htmlRes.status === 200 && !htmlRes.redirected) {
